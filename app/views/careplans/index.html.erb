<p id="notice"><%= notice %></p>

<h1>Careplans</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Create plan</th>
      <th>Update plan</th>
      <th>Care task</th>
      <th>Long time care goal</th>
      <th>Short time care goal</th>
      <th>User wants</th>
      <th>Family wants</th>
      <th>Situation achieved goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @careplans.each do |careplan| %>
      <tr>
        <td><%= careplan.customer_id %></td>
        <td><%= careplan.create_plan %></td>
        <td><%= careplan.update_plan %></td>
        <td><%= careplan.care_task %></td>
        <td><%= careplan.long_time_care_goal %></td>
        <td><%= careplan.short_time_care_goal %></td>
        <td><%= careplan.user_wants %></td>
        <td><%= careplan.family_wants %></td>
        <td><%= careplan.situation_achieved_goal %></td>

        <td><%= link_to 'Show', customer_careplan_path(@customer, careplan) %></td>
        <td><%= link_to 'Edit', edit_customer_careplan_path(@customer, careplan) %></td>
        <td><%= link_to 'Destroy', customer_careplan_path(@customer, careplan), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Careplan', new_customer_careplan_path %>
